<b:style src="./view.css"/>
<b:isolate/>

<div b:show="{hasTarget}" class="editor">
  <h2>{l10n:header}</h2>
  
  <input class="input" value="{name}" event-change="change" event-input="change"/>
  <button class="rollback-button" disabled="{noChanges}" event-click="rollback">
    {l10n:rollback}
  </button>
</div>
